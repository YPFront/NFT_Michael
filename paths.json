{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "src"
    ]
}
